                    </div>
                    <div id="btn_advance_crop" class="toolbar-button type2">
                        <div class="button-icon iconset iconset-advanced-crop"></div>
                        <div class="button-text">Crop</div>
                    </div>
                </div>*@
        </div>
    </div>

    <div class="toolbar-section-divider"></div>

    <!--View Tools-->
    <div class="toolbar-section">
        <div class="toolbar-section-title">View</div>
        <div class="toolbar-section-body">
            <div class="toolbar-section-row">
                <div id="btn_zoom_out" class="toolbar-button type2" title="View more of the image on screen">
                    <div class="button-icon iconset iconset-view-ZoomOut"></div>
                    <div class="button-text">Zoom Out</div>
                </div>
                <div id="btn_zoom_reset" class="toolbar-button type2" title="Reset to original size on screen">
                    <div class="button-icon iconset iconset-view-ZoomOut"></div>
                    <div class="button-text">Zoom Reset</div>
                </div>
                <div id="btn_zoom_in" class="toolbar-button type2" title="View close-up of image">
                    <div class="button-icon iconset iconset-view-ZoomIn"></div>
                    <div class="button-text">Zoom In</div>
                </div>
            </div>
            <hr />
            <div class="toolbar-section-row">
                <div id="btn_view_preview" class="toolbar-button type2" title="Print Preview"
                     onclick="CreatedPreviewOfAllPageForATemplate('@Url.Action("GetProceedToCart", "Editor")', @templateId, @templatePageId, ModalCallbackForPreview);">
                    <div class="button-icon iconset iconset-view_preview"></div>
                    <div class="button-text">Preview</div>
                </div>
                <div id="btn_view_gridline" class="toolbar-button type2" title="Show GridLine">
                    <div class="button-icon iconset iconset-view-gridline"></div>
                    <div class="button-text">Show GridLine</div>
                </div>
            </div>
        </div>
    </div>
</div>


<div id="btn_top_toolbar_toggle" class="toolbar-button iconset open"></div>
