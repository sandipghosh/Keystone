                        </div>
                        <div id="btn_align_bottom" class="toolbar-button type4" data-position-type="alignbottom" title="Set content alignment bottom">
                            <div class="button-menu-icon iconset iconset-advanced-align-Bottom"></div>
                            <div class="button-menu-text">Align Bottom</div>
                        </div>
                        <hr>
                        <div id="btn_dist_ver" class="toolbar-button type4" data-position-type="distributevertically" title="Set content alignment vertically">
                            <div class="button-menu-icon iconset iconset-advanced-align-Vertically"></div>
                            <div class="button-menu-text">Distribute Vertically</div>
                        </div>
                        <div id="btn_dist_hor" class="toolbar-button type4" data-position-type="distributehorizontally" title="Set content alignment horizontally">
                            <div class="button-menu-icon iconset iconset-advanced-align-Horizontally"></div>
                            <div class="button-menu-text">Distribute Horizontally</div>
                        </div>
                    </div>
                </div>
                <div id="btn_advance_layers" class="toolbar-button type2" title="Move some content in front of or behind other content">
                    <div class="button-icon iconset iconset-advanced-layers"></div>
                    <div class="button-text">Layers</div>
                    <div class="button-menu with-divider">
                        <div id="btn_arrange_bring_front" class="toolbar-button type4" data-position-type="front" title="Bring selected element to front">
                            <div class="button-menu-icon iconset iconset-advanced-layers-BringtoFront"></div>
                            <div class="button-menu-text">Bring to Front</div>
                        </div>
                        <div id="btn_arrange_send_back" class="toolbar-button type4" data-position-type="back" title="Bring selected element to front">
                            <div class="button-menu-icon iconset iconset-advanced-layers-SendtoBack"></div>
                            <div class="button-menu-text">Send to Back</div>
                        </div>
                        <div id="btn_arrange_bring_forward" class="toolbar-button type4" data-position-type="forword" title="Bring selected element to forward">
                            <div class="button-menu-icon iconset iconset-advanced-layers-BringForward"></div>
                            <div class="button-menu-text">Bring Forward</div>
                        </div>
                        <div id="btn_arrange_send_backward" class="toolbar-button type4" data-position-type="backward" title="Bring selected element to backward">
                            <div class="button-menu-icon iconset iconset-advanced-layers-SendBackward"></div>
                            <div class="button-menu-text">Send Backward</div>
                        </div>
                    </div>
                </div>
            </div>
