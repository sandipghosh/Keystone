                <div class="button-content">
                    <div class="colorSelector" id="bgcolor" style="background-color: #fff;">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="toolbar-section-divider"></div>

    <!--Edit Tools-->
    <div class="toolbar-section">
        <div class="toolbar-section-title">Edit</div>
        <div class="toolbar-section-body">
            <div class="toolbar-section-row">
                <div id="btn_edit_undo" class="toolbar-button type2" title="Undo changes">
                    <div class="button-icon iconset iconset-edit-undo"></div>
                    <div class="button-text">Undo</div>
                </div>
                <div id="btn_edit_redo" class="toolbar-button type2 disabled" title="Redo changes">
                    <div class="button-icon iconset iconset-edit-redo"></div>
                    <div class="button-text">Redo</div>
                </div>
                <div id="btn_edit_lock" class="toolbar-button type2" title="Lock">
                    <div class="button-icon iconset iconset-edit-lock"></div>
                    <div class="button-text">lock</div>
                </div>
            </div>
            <hr />
            <div class="toolbar-section-row">
                <div id="btn_edit_copy" class="toolbar-button type2" title="Copy the selected area to clipboard">
                    <div class="button-icon iconset iconset-edit-copy"></div>
                    <div class="button-text">Copy</div>
                </div>
                <div id="btn_edit_paste" class="toolbar-button type2 disabled" title="Insert copied content onto document">
                    <div class="button-icon iconset iconset-edit-paste"></div>
                    <div class="button-text">Paste</div>
                </div>
                <div id="btn_edit_delete" class="toolbar-button type2" title="Removes selected content">
                    <div class="button-icon iconset iconset-edit-delete"></div>
                    <div class="button-text">Delete</div>
                </div>
            </div>
        </div>
    </div>

    <div class="toolbar-section-divider"></div>

    <!--Advanced Tools-->
    <div class="toolbar-section">
        <div class="toolbar-section-title">Advanced</div>
        <div class="toolbar-section-body">
            <div class="toolbar-section-row">
                <div id="btn_advance_align" class="toolbar-button type2" title="Keep content to the left, right, or center of the content box">
                    <div class="button-icon iconset iconset-advanced-align"></div>
                    <div class="button-text">Align</div>
                    <div class="button-menu with-divider">
                        <div id="btn_align_left" class="toolbar-button type4" data-position-type="alignleft" title="Set content alignment left">
