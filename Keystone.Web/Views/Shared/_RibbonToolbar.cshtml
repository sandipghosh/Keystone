    <div class="toolbar-section-divider"></div>

    <!--Text Tools-->
    <div class="toolbar-section">
        <div class="toolbar-section-title">Text</div>
        <div class="toolbar-section-body">
            <div class="toolbar-section-row">
                <div id="btn_text_font_face" class="toolbar-button type3" title="Change the font of the selected text">
                    <div class="button-text">Font</div>
                    <div class="button-content">
                        <div id="fontSelector" class="fontSelect" data-type="fontFamily">
                            <div class="arrow-down"></div>
                        </div>
                        <div class="fontList"></div>
                    </div>
                </div>
                <div id="btn_text_font_size" class="toolbar-button type3" title="Change the font size of the selected text">
                    <div class="button-text">Size</div>
                    <div class="button-content">
                        <div id="fontSizeSelector" class="fontSelect" data-type="fontSize" style="width:35px;">
                            <div class="arrow-down"></div>
                        </div>
                        <div class="fontList"></div>
                    </div>
                </div>
                <div id="btn_text_font_color" class="toolbar-button type3" title="Change the color of the selected text">
                    <div class="button-text">Color</div>
                    <div class="button-content">
                        <div class="colorSelector" id="fcolor" style="background-color: #fff;">
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="toolbar-section-row">
                <div id="btn_text_bold" class="toolbar-button type2" data-formatter-type="bold" title="Set font style bold">
                    <div class="button-icon iconset iconset-formatter-bold"></div>
                </div>
                <div id="btn_text_italic" class="toolbar-button type2" data-formatter-type="italic" title="Set font style italic">
                    <div class="button-icon iconset iconset-formatter-italic"></div>
                </div>
                <div id="btn_text_gravity_west" class="toolbar-button type2" data-formatter-type="left" title="Set text align left">
                    <div class="button-icon iconset iconset-formatter-left-indent"></div>
                </div>
                <div id="btn_text_gravity_center" class="toolbar-button type2" data-formatter-type="center" title="Set text align center">
                    <div class="button-icon iconset iconset-formatter-center-indent"></div>
                </div>
                <div id="btn_text_gravity_east" class="toolbar-button type2" data-formatter-type="right" title="Set text align right">
                    <div class="button-icon iconset iconset-formatter-right-indent"></div>
                </div>
                <div id="btn_symbol_bullet" class="toolbar-button type2">
                    <div class="button-icon iconset iconset-formatter-bulletlist"></div>
                    <div class="button-menu">
                        <div id="btn_symbol_bullet_none" class="toolbar-button type2 on" data-symbol-bullet-format-type="none" title="Remove symbol bullet list">
                            <div class="bullet-text-item" style="background-position: 0 0"></div>
                        </div>
                        <div id="btn_symbol_bullet_black_circle" class="toolbar-button type2" data-symbol-bullet-format-type="type1" title="Set bullet list with black circle symbols">
                            <div class="bullet-text-item" style="background-position: 0 -60px"></div>
                        </div>
                        <div id="btn_symbol_bullet_white_circle" class="toolbar-button type2" data-symbol-bullet-format-type="type2" title="Set bullet list with white circle symbols">
                            <div class="bullet-text-item" style="background-position: -60px -60px"></div>
                        </div>
                        <div id="btn_symbol_bullet_black_square" class="toolbar-button type2" data-symbol-bullet-format-type="type3" title="Set bullet list with black square symbols">
                            <div class="bullet-text-item" style="background-position: -120px -60px"></div>
                        </div>
                        <div id="btn_symbol_bullet_white_square" class="toolbar-button type2" data-symbol-bullet-format-type="type4" title="Set bullet list with white square symbols">
                            <div class="bullet-text-item" style="background-position: -180px -60px"></div>
                        </div>
                        @*<div id="btn_symbol_bullet_dash" class="toolbar-button type2" data-symbol-bullet-format-type="type5">
                                <div class="bullet-text-item" style="background-position: -240px -60px"></div>
                            </div>*@
                    </div>
                </div>
                <div id="btn_text_number" class="toolbar-button type2">
                    <div class="button-icon iconset iconset-formatter-numberlist"></div>
                    <div class="button-menu">
                        <div id="btn_text_number_none" class="toolbar-button type2 on" data-text-bullet-format-type="none" title="Remove text bullet list">
                            <div class="bullet-text-item" style="background-position: 0 0"></div>
                        </div>
                        <div id="btn_text_bullet_number_dot" class="toolbar-button type2" data-text-bullet-format-type="type1" title="Set bullet list with number and dots">
                            <div class="bullet-text-item" style="background-position: -60px 0"></div>
                        </div>
                        <div id="btn_text_bullet_number_dash" class="toolbar-button type2" data-text-bullet-format-type="type2" title="Set bullet list with number and dashes">
