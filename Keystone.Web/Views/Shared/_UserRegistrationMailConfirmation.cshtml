@using Keystone.Web.Models
@using System.Threading
@model UserAccountModel
@{
    Layout = null;
}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Untitled Document</title>
</head>

<body>
    <table width="778" border="0" style="background-color: #323232; margin: 0 auto;">
        <tr>
            <td>
                <div style="float: left; width: 282px; height: 55px; margin: 14px 0 12px 7px;">
                    <a href="#">
                        <img src="@System.Configuration.ConfigurationManager.AppSettings["DomainName"]/Styles/Images/logo.png" alt="" width="282" height="55" style="border: none;" /></a>
                </div>
            </td>
        </tr>
        <tr>
            <td style="background-color: #fff; width: 759px; min-height: 20px; float: left; margin-left: 7px;
                margin-bottom: 7px;">
                <table width="98%" border="0" style="background-color: #dfdfdf; border-top: 3px solid #393939;
                    margin: 1%;">
                    <tr>
                        <td>
                            <table width="682" border="0" style="margin: 20px 20px 10px 20px;">
                                <tr>
                                    <td>
                                        <div style="font-family: 'Trebuchet MS', Arial, Helvetica, sans-serif; font-weight: 900;
                                            font-size: 28px; color: #515151; width: 682px; float: left; border-bottom: 1px solid #989898;">
                                            Welcome to Keystone Industries,
                                        </div>
                                        <div style="font-family: Arial, Helvetica, sans-serif; color: #515151; font-size: 14px;
                                            line-height: 25px; margin-top: 10px; float: left;">
                                            <strong>Hello @Thread.CurrentThread.CurrentCulture.TextInfo.ToTitleCase(string.Format("{0} {1}", Model.FirstName, Model.LastName).Trim()),</strong><br />
                                            Thank you for registering with the Keystone Customized Marketing Materials web portal.
                                            The following are your login credentials:<br />
                                            <br />
                                            <br />
                                            User Id: @Model.UserId <br />
                                            Password: @Model.Password <br />
                                            <br />
                                            <br />
                                            Please click <a href='@TempData["changePasswordUrl"].ToString()'>here</a> to return to the site <a href='@TempData["changePasswordUrl"].ToString()'>www.gt-keystone.com</a>
                                            where you can change your password to get started creating customized marketing materials to further promote your business.
                                            <br />
                                            Thank you for your interest in Keystone Industries.
                                            <br />
                                            Sincerely,
                                            <br />
                                            <br />
                                            Derek Keene
                                            <br />
                                            Vice President of Marketing and Product Management
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
