@using Keystone.Web.Utilities
@{
    string errorMessage = ViewBag.ErrorMessage.ToString();
}

<div class="popup-cotainer content-wrapper">
    <div class="popup-title">Error</div>
    <div class="popup-content row-container">
        <div class="row-item">
            <div class="row-col-left">
                <img src='@Url.Content("~/Styles/Images/error.png")' alt="" />
            </div>
            <div class="row-col-right">
                <p style="font-family: 'Comic Sans MS', cursive;font-size: 14px;">
                    @errorMessage.ToBase64Decode()
                </p>
            </div>
        </div>
    </div>
    <div class="popup-navigation" style="padding: 2% 0 1% 3%;">
        <input type="button" style="margin-left: 33%;" class="sub"
               onclick="javascript:window.location.href='@Url.Action("Index", "Home")'" value="Go to Home" />
    </div>
</div>